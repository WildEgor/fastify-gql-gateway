{
  "maxWorkers": 1,
  "moduleFileExtensions": ["ts", "js"],
  "testMatch": [
    "<rootDir>/src/**/*.spec.ts",
    "<rootDir>/test/**/*.spec.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "@src/(.*)$": "<rootDir>/src/$1",
    "@adapters/(.*)$": "<rootDir>/src/infrastructure/adapters/$1",
    "@shared/(.*)$": "<rootDir>/src/shared/$1",
    "@modules/(.*)$": "<rootDir>/src/modules/$1"
  }
}
